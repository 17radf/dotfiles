# doing something
alias pls='sudo $(fc -ln -1)'
alias open="xdg-open" # works with wsl too
alias c="clear" # bad 'clearing' habit
alias q="exit" # bad 'quitting' habit
alias man="man -P \"sh -c 'col -b | nvim -c \\\"set ft=man nomod nolist\\\" -'\""
alias lolman="man -P 'col -b | lolcat -f | less -R'"

# edit config
alias zshalias="vi ~/.zsh_aliases"
alias zshplugin="vi ~/.dotfiles/dots/zsh_plugins"
alias zshconfig="vi ~/.zshrc"
alias vimconfig="vi ~/.vimrc"
alias nvimconfig="vi ~/.config/nvim/init.lua"

# replace with better app
alias vi="nvim"

# moving directories
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# listing (using k cuz better)
# it's slower but you can always
# disable it anyway on plugin file
checkk() {
  ! command -v k &> /dev/null
}
if checkk
  then
    alias ls='ls --color=auto'
    alias la='ls -la --color=auto'
    alias l='ls -d .* --color=auto'
  else
    alias ls="k --no-vcs" 
    alias la="k -d .*" 
    alias l="k k -A" 
  fi
alias lsimg=$'for f (*.(jpeg|jpg|gif|png)) {printf $f;php -r "print_r(getimagesize(\'$f\'));" |grep -w width |sed \'s/ .3] =>//\'}'

# network
alias wifi='nmtui'

# some programming thingy
alias mdb="sudo service mongodb"
alias lamppstart="sudo /opt/lampp/lampp start"
alias lamppst="sudo /opt/lampp/lampp status"
alias lamppstop="sudo /opt/lampp/lampp stop"
alias lampprestart="sudo /opt/lampp/lampp restart"
alias mysql="sudo /opt/lampp/bin/mysql -u root -p"

# optimus manager
alias opma="optimus-manager"
alias opmas="optimus-manager --switch"
alias opmast="optimus-manager --status"

# bitchy turbo (good tho)
alias onturbo="echo 0 | sudo tee /sys/devices/system/cpu/intel_pstate/no_turbo"
alias offturbo="echo 1 | sudo tee /sys/devices/system/cpu/intel_pstate/no_turbo"

# some fancy stuff that i rarely used
alias sl="sl -a | lolcat" # gay fuckin train LMFAOO
alias lyrics="sptlrx" # paru -S sptlrx-bin its for synced spotify lyrics in terminal


# functions

# make dir and then cd into it
mkcd () { mkdir -p -- "$1" && cd -P -- "$1" }

