# volta
export VOLTA_HOME="$HOME/.volta"
export PATH="$VOLTA_HOME/bin:$PATH"

# laravel
export LARAVEL_HOME="$HOME/.config/composer/vendor"
export PATH="$LARAVEL_HOME/bin:$PATH"

# ruby
#export PATH="$HOME/.rbenv/bin:$PATH"
#eval "$(rbenv init -)"

# deno
export DENO_INSTALL="/home/raihan/.deno"
export PATH="$DENO_INSTALL/bin:$PATH"

# dart
export PATH="$PATH:/usr/lib/dart/bin"
echo 'export PATH="$PATH:/usr/lib/dart/bin"' >> ~/.profile

# gpg
export GPG_TTY=$TTY

# bun completions
[ -s "/home/raihan/.bun/_bun" ] && source "/home/raihan/.bun/_bun"

# Bun
export BUN_INSTALL="/home/raihan/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

# android sdk
export ANDROID_HOME=$HOME/.sdk_dir/Android/SDK
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/platform-tools/
export PATH=$PATH:$ANDROID_HOME/build-tools/
export PATH=$PATH:$ANDROID_HOME/cmdline-tools/latest/bin

# use flutter sdk from their own website
# flutter dari AUR problematic
# flutter
export PATH=$PATH:$HOME/.sdk_dir/flutter/bin
export CHROME_EXECUTABLE=/usr/bin/chromium

# pub cache
export PATH="$PATH":"$HOME/.pub-cache/bin"
