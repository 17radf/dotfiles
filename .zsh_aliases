# doing something
alias zshconfig="nvim ~/.zshrc"
alias zshalias="nvim ~/.zsh_aliases"
alias vim="nvim"
alias c="clear"
alias q="exit"
alias mdb="sudo service mongodb"
alias open="explorer.exe"

# moving directories
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias towin="cd /mnt/c/Users/$(whoami)/"

# listing
alias ls='ls --color=auto'
alias la='ls -la'
alias l='ls -d .* --color=auto'


mkcd () { mkdir -p -- "$1" && cd -P -- "$1" }
