# doing something
alias zshconfig="nvim ~/.zshrc"
alias zshalias="nvim ~/.zsh_aliases"
alias open="xdg-open"
alias c="clear"
alias q="exit"

# replace with better app
alias vim="nvim"
alias cat="bat"

# moving directories
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# listing
alias ls='ls --color=auto'
alias la='ls -la'
alias l='ls -d .* --color=auto'

# network
alias wifi='nmtui'

# some programming thingy
alias mdb="sudo service mongodb"

# optimus manager
alias opma="optimus-manager"
alias opmas="optimus-manager --switch"
alias opmast="optimus-manager --status"
